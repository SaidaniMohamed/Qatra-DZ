<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="4dp"
    app:cardCornerRadius="8dp"
    android:layout_margin="4dp"
    android:id="@+id/card_view"
    >

     <RelativeLayout
         android:gravity="center|left"
         android:layout_width="match_parent"
         android:layout_height="match_parent">

         <TextView
             android:textSize="25dp"
             android:gravity="center"
             android:textColor="#fff"
             android:text="C"
             android:layout_margin="5dp"
             android:layout_width="50dp"
             android:layout_height="50dp"
             android:id="@+id/image_type_notification"
             android:background="@drawable/circle_shape_consoma_all"
             />

         <TextView
             android:layout_marginLeft="10dp"
             android:layout_toRightOf="@+id/image_type_notification"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Type Notification"
             android:id="@+id/type_notification"
             android:textSize="16dp"
             />

         <TextView
             android:layout_marginLeft="10dp"
             android:layout_toRightOf="@+id/image_type_notification"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:id="@+id/data_notification"
             android:text="2017/10/21  12:10:05"
             android:layout_below="@+id/type_notification"
             android:textSize="16dp"
             />

     </RelativeLayout>

</android.support.v7.widget.CardView>