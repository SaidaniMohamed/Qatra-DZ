<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="4dp"
    android:padding="5dp"
    app:cardCornerRadius="8dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/image_type_notification"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            android:background="@drawable/circle_shape_delete_noti"
            android:gravity="center"
            android:text="!"
            android:textColor="#fff"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/type_notification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image_type_notification"
            android:gravity="center"
            android:padding="4dp"
            android:text="vous êtes sûre de supprimer cette notification ?"
            android:textSize="16dp" />

        <TextView

            android:layout_marginTop="10dp"
            android:textColor="@color/colorPrimary"
            android:layout_marginEnd="20dp"
            android:id="@+id/oui_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@id/type_notification"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:padding="4dp"
            android:text="Oui"
            android:textSize="16dp" />

        <TextView
            android:gravity="right"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorPrimary"
            android:id="@+id/no_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignBaseline="@+id/oui_btn"
            android:layout_alignBottom="@+id/oui_btn"
            android:layout_toStartOf="@+id/oui_btn"
            android:padding="4dp"
            android:text="Non"
            android:layout_marginEnd="10dp"
            />

    </RelativeLayout>

</android.support.v7.widget.CardView>